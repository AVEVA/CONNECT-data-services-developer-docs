{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/**.csproj"
          ]
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "_appLogoPath": "./Content_Portal/Documentation/images/atlas_icon.png",
      "_appName": "OSIsoft Cloud Services Documentation"
    }
  ],
  "build": {
	"globalMetadata": {
		"_enableSearch": true
	},
    "content": [
      {
        "files": [
	  "Content_Portal/**/**.md",
	  "Content_Portal/**/toc.yml",
          "toc.yml",
          "**.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
            "Content_Portal/rom/images/**",
            "Content_Portal/Documentation/images/**",
            "Content_Portal/add-organize-data/images/**",
            "Content_Portal/add-organize-data/collect-data/connectors/images/**",
            "Content_Portal/add-organize-data/collect-data/connectors/omf/images/**",
            "Content_Portal/add-organize-data/attach-meaning/assets/images/**",
            "Content_Portal/add-organize-data/attach-meaning/metadata-rules/images/**",
            "Content_Portal/add-organize-data/store-data/images/**",
            "Content_Portal/set-up/images/**",
            "Content_Portal/visualize-data/images/**",
            "Content_Portal/Overview/images/**",
            "Content_Portal/Overview/get-started/images/**",
            "Content_Portal/Overview/get-started/clients/images/**",
            "Content_Portal/Overview/get-started/connections/images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "_exported_templates/default"
    ],
    "postProcessors": ["OcsVariableProcessor"],
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  }
}
